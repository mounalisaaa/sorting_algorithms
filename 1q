#include "sort.h"

void swap(int *a, int *b)
{
	int temp;

	temp = *a;
	*a = *b;
	*b = temp;
}

void heapify(int *arr, int size)
{
	int i;
	int max;

	i = size;
	while (i > 0)
	{
		if (i * 2 <= size)
		{
			max = i * 2 - 1;
			if ((i * 2) + 1 <= size)
			{
				if (arr[i * 2] > arr[max])
					max = i * 2;
			}
			if (arr[max] > arr[i])
				swap(&arr[i - 1], &arr[max]);
		}
		i--;
	}
}

void heap_sort(int *array, size_t size)
{
	heapify(array, size);
}

int main(void)
{
	int *arr = {10, 20, 15, 12, 40, 25, 18};
	
	print_array(array, size);
	printf("%\n");
	heap_sort(arr, 7);
	printf("%\n");
	print_array(array, size);
}
